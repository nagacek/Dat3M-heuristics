C C-Wo+Ro-rb-Ro+Wo-mb-Ro
(* Allowed: rmb not transitive.  Also allowed by Power. *)
{
x = 0;
y = 0;
}

P0(int *x)
{
	WRITE_ONCE(*x, 1);
}

P1(int *y, int *x)
{
	int r1; int r2;
	r1 = READ_ONCE(*x);
	smp_rmb();
	r2 = READ_ONCE(*y);
}

P2(int *x, int *y)
{
	int r3;
	WRITE_ONCE(*y, 1);
	smp_mb();
	r3 = READ_ONCE(*x);
}

exists (1:r1 = 1 /\ 1:r2 = 0 /\ 2:r3=0)
