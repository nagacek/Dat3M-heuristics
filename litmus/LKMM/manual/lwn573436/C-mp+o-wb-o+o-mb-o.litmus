C C-MP+o-wb-o+o-mb-o
(* Forbid: wmb interacting via write-to-read with only one other thread. *)
{
x = 0;
y = 0;
}

P0(int *x, int *y)
{
	WRITE_ONCE(*y, 1);
	smp_wmb();
	WRITE_ONCE(*x, 1);
}

P1(int *y, int *x)
{
	int r1; int r2;
	r1 = READ_ONCE(*x);
	smp_mb();
	r2 = READ_ONCE(*y);
}

exists (1:r1=1 /\ 1:r2=0)
