C C-2+2w+o-mb-o+o-wb-o
(*
 * Allow per Linus Torvalds email:
 * http://www.spinics.net/lists/arm-kernel/msg483690.html
 *)
{
x = 0;
y = 0;
}

P0(int *x, int *y)
{
	WRITE_ONCE(*x, 1);
	smp_mb();
	WRITE_ONCE(*y, 2);
}

P1(int *y, int *x)
{
	WRITE_ONCE(*y, 1);
	smp_wmb();
	WRITE_ONCE(*x, 2);
}

exists (x=1 /\ y=1)
