C C-WRC+o-mb-o+o-rb-o
(* Allow: rmb is not transitive. (Forbidden by PowerPC, but...) *)
{
x = 0;
y = 0;
}

P0(int *y)
{
	WRITE_ONCE(*y, 1);
}

P1(int *y, int *x)
{
	int r3 = READ_ONCE(*y);
	smp_mb();
	WRITE_ONCE(*x, 1);
}

P2(int *x, int *y)
{
	int r1; int r2;
	r1 = READ_ONCE(*x);
	smp_rmb();
	r2 = READ_ONCE(*y);
}

exists (1:r3=1 /\ 2:r1=1 /\ 2:r2=0)
