C C-wo+ro-mb-wo+wo-mb-ro
(* Forbid, all full memory barriers. *)
{
x = 0;
y = 0;
}

P0(int *x)
{
	WRITE_ONCE(*x, 1);
}

P1(int *y, int *x)
{
	int r1 = READ_ONCE(*x);
	smp_mb();
	WRITE_ONCE(*y, 1);
}

P2(int *x, int *y)
{
	int r4;
	WRITE_ONCE(*y, 2);
	smp_mb();
	r4 = READ_ONCE(*x);
}

exists (y=2 /\ 1:r1=1 /\ 2:r4=0)
